<div class="text-center">
    <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
    <form class="form-signup" id="signup-form" action="<%-self.urlFor('api/users', 'signup', null, 'POST')%>" method="POST">
        
        <label for="firstName" class="sr-only">First name</label>
        <input type="text" id="firstName" class="form-control" placeholder="First name" required/>

        <label for="lastName" class="sr-only">Last name</label>
        <input type="text" id="lastName" class="form-control" placeholder="Last name" required/>

        <label for="email" class="sr-only">Email address</label>
        <input type="email" id="email" class="form-control" placeholder="E-Mail address" required autofocus/>
        
        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" class="form-control" placeholder="Password" required/>
        
        <button class="btn btn-lg btn-primary btn-block" onclick="signupPressed(this); return false;">Sign Up</button>
    </form>
</div>