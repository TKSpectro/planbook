<% if(isMoneypoolChooser == true){ %>

<div class="container" style="width: 60%">
    <%-include('../modals/addMoneypoolModal.html.ejs');-%>

    <div id="moneypoolList" class="list-group pt-4"></div>
</div>

<% } else{ %>
<div class="mx-auto" style="width: 80%">
    <div class="pt-4 mx-auto">
        <div class="progress font-weight-bold" style="height: 4em">
            <div
                id="neededMoneyProgressBar"
                class="progress-bar progress-bar-striped text-dark"
                role="progressbar"
                aria-valuemin="0"
                aria-valuemax="100"
            ></div>
            <div
                id="missingMoneyProgressBar"
                class="progress-bar progress-bar-striped bg-complementary text-dark"
                role="progressbar"
                aria-valuemin="0"
                aria-valuemax="100"
            ></div>
        </div>
    </div>
    <div class="pt-4">
        <canvas id="memberAmountChart"></canvas>
    </div>
    <div class="pt-4">
        <label>All moneypool payments</label>
        <table
            id="moneypoolPaymentsTable"
            class="table table-hover table-dark bg-dark"
        >
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Date</th>
                    <th scope="col">Value</th>
                    <th scope="col">From</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<% } %>
