<!-- Button trigger modal -->
<button
    type="button"
    class="btn btn-primary"
    data-toggle="modal"
    data-target="#addRecurringPaymentModal"
>
    Add recurring Payment
</button>

<div
    class="modal fade"
    id="addRecurringPaymentModal"
    tabindex="-1"
    aria-labelledby="addRecurringPaymentModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="addRecurringPaymentModalLabel">
                    Add new recurring payment
                </h5>
                <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                >
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form
                    id="addRecurringPaymentModalForm"
                    onsubmit="return saveRecurringPayment(event, 'add')"
                >
                    <!-- Purpose Input -->
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label">
                            Purpose
                        </label>
                        <div class="col-sm-10">
                            <input
                                id="addPurposeInput"
                                type="text"
                                class="form-control"
                                maxlength="50"
                                placeholder=""
                                required
                            />
                        </div>
                    </div>
                    <!-- Category Selector -->
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label"
                            >Category
                        </label>
                        <div class="col-sm-10">
                            <select
                                id="addCategorySelect"
                                class="form-control selectpicker"
                                data-live-search="true"
                                required
                            >
                                <%for (let i = 0; i < categories.length; i++){%>
                                <option
                                    value="<%=categories[i].name%>"
                                    data-tokens="<%=categories[i].name%>/<%=categories[i].id%>"
                                >
                                    <%=categories[i].name%>
                                </option>
                                <% }; %>
                            </select>
                        </div>
                    </div>
                    <!-- Value Input -->
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label">
                            Value
                        </label>
                        <div class="input-group col-sm-10">
                            <div class="input-group-prepend">
                                <div class="input-group-text">â‚¬</div>
                            </div>
                            <input
                                id="addValueInput"
                                type="number"
                                class="form-control"
                                placeholder=""
                                required
                            />
                        </div>
                    </div>
                    <!-- Start Date Input -->
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label">
                            Start
                        </label>
                        <div class="input-group col-sm-10">
                            <input
                                id="addStartDateInput"
                                type="date"
                                class="form-control"
                                placeholder=""
                                required
                            />
                        </div>
                    </div>
                    <!-- End Date Input -->
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label">
                            End
                        </label>
                        <div class="input-group col-sm-10">
                            <input
                                id="addEndDateInput"
                                type="date"
                                class="form-control"
                                placeholder=""
                            />
                        </div>
                    </div>
                    <!-- Interval Selector -->
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label"
                            >Interval</label
                        >
                        <div class="col-sm-10">
                            <select
                                class="form-control"
                                id="addIntervalSelect"
                                required
                            >
                                <option>daily</option>
                                <option>weekly</option>
                                <option>monthly</option>
                                <option>quarterly</option>
                                <option>yearly</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
