<div
    class="modal fade"
    id="editMoneypoolModal"
    tabindex="-1"
    aria-labelledby="editMoneypoolModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="editMoneypoolModalLabel">
                    Edit Moneypool
                </h5>
                <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                >
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>
            <form
                id="editMoneypoolModalForm"
                onsubmit="return updateMoneypool(event)"
            >
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">
                            Name
                        </label>
                        <div class="col-sm-8">
                            <input
                                id="editNameInput"
                                type="text"
                                class="form-control"
                                maxlength="30"
                                required
                            />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">
                            Description
                        </label>
                        <div class="col-sm-8">
                            <textarea
                                id="editDescriptionInput"
                                type="text"
                                class="form-control"
                                maxlength="350"
                            ></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">
                            Needed money
                        </label>
                        <div class="input-group col-sm-8">
                            <div class="input-group-prepend">
                                <div class="input-group-text">â‚¬</div>
                            </div>
                            <input
                                id="editNeededMoneyInput"
                                type="number"
                                class="form-control"
                                required
                            />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
