<!-- Button trigger modal -->
<button
    type="button"
    class="btn btn-primary"
    data-toggle="modal"
    data-target="#addRecuringPaymentModal"
>
    Add recurring Payment
</button>

<!-- Modal -->
<div
    class="modal fade"
    id="addRecuringPaymentModal"
    tabindex="-1"
    aria-labelledby="addRecuringPaymentModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addRecuringPaymentModalLabel">
                    Add new recurring payment
                </h5>
                <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <!-- Purpose Input -->
                    <div class="form-group row">
                        <label for="" class="col-sm-2 form-control-label">
                            Purpose
                        </label>
                        <div class="col-sm-10">
                            <input
                                type="text"
                                class="form-control"
                                placeholder=""
                            />
                        </div>
                    </div>
                    <!-- Category Selector -->
                    <div class="form-group row">
                        <label for="" class="col-sm-2 form-control-label"
                            >Category
                        </label>
                        <div class="col-sm-10">
                            <select
                                class="form-control selectpicker"
                                id="select-category"
                                data-live-search="true"
                            >
                                <% for (let i = 0; i < categories.length; i++) {
                                ;%>
                                <option data-tokens="<%=categories[i].name%>">
                                    <%=categories[i].name%>
                                </option>
                                <% }; %>
                            </select>
                        </div>
                    </div>
                    <!-- Value Input -->
                    <div class="form-group row">
                        <label for="" class="col-sm-2 form-control-label">
                            Value
                        </label>
                        <div class="input-group col-sm-10">
                            <div class="input-group-prepend">
                                <div class="input-group-text">€</div>
                            </div>
                            <input
                                type="number"
                                class="form-control"
                                placeholder=""
                            />
                        </div>
                    </div>
                    <!-- Start Date Input -->
                    <div class="form-group row">
                        <label for="" class="col-sm-2 form-control-label">
                            Start
                        </label>
                        <div class="input-group col-sm-10">
                            <div class="input-group-prepend">
                                <div class="input-group-text">€</div>
                            </div>
                            <input
                                type="date"
                                class="form-control"
                                placeholder=""
                            />
                        </div>
                    </div>
                    <!-- End Date Input -->
                    <div class="form-group row">
                        <label for="" class="col-sm-2 form-control-label">
                            End
                        </label>
                        <div class="input-group col-sm-10">
                            <div class="input-group-prepend">
                                <div class="input-group-text">€</div>
                            </div>
                            <input
                                type="date"
                                class="form-control"
                                placeholder=""
                            />
                        </div>
                    </div>
                    <!-- Interval Selector -->
                    <div class="form-group row">
                        <label for="" class="col-sm-2 form-control-label"
                            >Interval</label
                        >
                        <div class="col-sm-10">
                            <select class="form-control" id="intervalSelect">
                                <option>daily</option>
                                <option>weekly</option>
                                <option>monthly</option>
                                <option>quarterly</option>
                                <option>yearly</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                >
                    Close
                </button>
                <button
                    type="button"
                    class="btn btn-primary"
                    data-dismiss="modal"
                >
                    Save
                </button>
            </div>
        </div>
    </div>
</div>
