<div
    class="modal fade"
    id="addPaymentModal"
    tabindex="-1"
    aria-labelledby="addPaymentModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="addPaymentModalLabel">Add new Payment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>
            <form id="addPaymentModalForm" onsubmit="return savePayment(event)">
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label"> Purpose </label>
                        <div class="col-sm-10">
                            <input
                                id="purposeInput"
                                type="text"
                                class="form-control"
                                maxlength="50"
                                required
                            />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label"> Value </label>
                        <div class="input-group col-sm-10">
                            <div class="input-group-prepend">
                                <div class="input-group-text">â‚¬</div>
                            </div>
                            <input id="valueInput" type="number" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input
                                class="custom-control-input"
                                type="radio"
                                name="valueRadio"
                                id="valueRadioIncome"
                                value="income"
                                checked
                            />
                            <label class="custom-control-label" for="valueRadioIncome">
                                Income
                            </label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input
                                class="custom-control-input"
                                type="radio"
                                name="valueRadio"
                                id="valueRadioExpense"
                                value="expense"
                            />
                            <label class="custom-control-label" for="valueRadioExpense">
                                Expense
                            </label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label">Category </label>
                        <div class="col-sm-10">
                            <select
                                class="form-control selectpicker"
                                id="categorySelect"
                                data-live-search="true"
                            >
                                <%for (let i = 0; i < categories.length; i++){%>
                                <option
                                    value="<%=categories[i].name%>"
                                    data-tokens="<%=categories[i].name%>/<%=categories[i].id%>"
                                >
                                    <%=categories[i].name%>
                                </option>
                                <% }; %>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
